<!DOCTYPE html>
<html>
  <head>
    <title>Home - Uploaded Images</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #e6f2ef;
        font-family: sans-serif;
      }
      .container {
        margin-top: 40px;
      }
      .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        border: none;
        border-radius: 15px;
      }
      .card-img-top {
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        height: 200px;
        object-fit: cover;
      }
    </style>
  </head>
  <body>
    <div class="container text-center">
      <h1 class="text-success mb-4">Uploaded Images</h1>
      <a href="/upload" class="btn btn-success mb-4">Upload New Image</a>
      <div class="row">
        <% images.forEach(image => { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <img
              src="<%= image.filename %>"
              class="card-img-top"
              alt="<%= image.originalname %>"
            />
            <div class="card-body">
              <p class="card-text"><%= image.originalname %></p>
              <small class="text-muted"
                >Uploaded: <%= new Date(image.uploadDate).toLocaleString()
                %></small
              >
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
